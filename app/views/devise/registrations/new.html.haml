.jumbotron{:style => "background-image: url(#{image_url 'register_background'})"}
  .container
    .row.flex-row
      .col-sm-8.valign-center
        %h1.heading.inverse Załóż konto aby odebrać portfel.
      .col-sm-4
        .slider-box-appointment
          .header
            %h3.heading.font-2.text-center Dołącz tutaj
          %hr.hr-2/
          .body
            = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
              .form-group
                = f.email_field :email, autofocus: true, placeholder: "Twój email", class: "form-control"
              .form-group
                = f.password_field :password, placeholder: "Twoje hasło", class: "form-control"
              .form-group
                = f.password_field :password_confirmation, placeholder: "Potwierdź hasło", class: "form-control"
              .form-group
                = f.submit "Register", class: "btn btn-success"
            = render "devise/shared/links"
